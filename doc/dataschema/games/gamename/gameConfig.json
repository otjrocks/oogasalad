{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "gameTitle": {
          "type": "string"
        },
        "author": {
          "type": "string"
        },
        "gameDescription": {
          "type": "string"
        }
      },
      "required": [
        "gameTitle",
        "author",
        "gameDescription"
      ]
    },
    "defaultSettings": {
      "type": "object",
      "properties": {
        "gameSpeed": {
          "type": "number"
        },
        "startingLives": {
          "type": "integer"
        },
        "initialScore": {
          "type": "integer"
        },
        "scoreStrategy": {
          "type": "string"
        },
        "winCondition": {
          "type": "string"
        }
      },
      "required": [
        "gameSpeed",
        "startingLives",
        "initialScore",
        "scoreStrategy",
        "winCondition"
      ]
    },
    "levels":
    {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "settings": {
            "type": "object",
            "properties": {
              "gameSpeed": {
                "type": "number"
              },
              "startingLives": {
                "type": "integer"
              },
              "initialScore": {
                "type": "integer"
              },
              "winCondition": {
                "type": "string"
              }
            }
          },
          "levelMap": {
            "description": "File name of the level map",
            "type": "string"
          }
        },
        "required": [
          "levelMap"
        ]
      }
    },
    "collisions":
    {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "entityA": {
            "description": "file name for the entity (similar to the one in level)",
            "type": "string"
          },
          "modeA": {
            "type": "array",
            "items": {
              "type": "integer"
            }
          },
          "entityB": {
            "type": "string"
          },
          "modeB": {
            "type": "array",
            "items": {
              "type": "integer"
            }
          },
          "eventsA": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "eventsB": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "entityA",
          "entityB",
          "eventsA",
          "eventsB"
        ]
      }
    }
  },
  "required": [
    "metadata",
    "defaultSettings",
    "levels"
  ]
}
